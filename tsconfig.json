{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"jsx": "react",
		"rootDir": "./src",
		"outDir": "dist",

		"sourceMap": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es2015"],
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["node_modules/@types"],
		"resolveJsonModule": true,
		"baseUrl": "./src"
	},
	"include": ["src", "./index.d.ts"]
}
